[Unit]
Description=Jenkins Master {{ ansible_hostname }} Container with JCasC
Requires={% if jenkins_container_runtime == 'docker' %}docker.service{% else %}podman.service{% endif %}
After={% if jenkins_container_runtime == 'docker' %}docker.service{% else %}podman.service{% endif %} network.target
Wants=network.target

[Service]
Type=forking
User={{ jenkins_user }}
Group={{ jenkins_group }}
EnvironmentFile=/etc/default/jenkins-{{ ansible_hostname }}
ExecStartPre=-{% if jenkins_container_runtime == 'docker' %}/usr/bin/docker{% else %}/usr/bin/podman{% endif %} stop jenkins-master-{{ ansible_hostname }}
ExecStartPre=-{% if jenkins_container_runtime == 'docker' %}/usr/bin/docker{% else %}/usr/bin/podman{% endif %} rm jenkins-master-{{ ansible_hostname }}
ExecStart={% if jenkins_container_runtime == 'docker' %}/usr/bin/docker{% else %}/usr/bin/podman{% endif %} run --name jenkins-master-{{ ansible_hostname }} \
  --network {{ jenkins_network_name }} \
  -p {{ jenkins_master_port }}:8080 \
  -p {{ jenkins_agent_port }}:50000 \
  -v jenkins-home-{{ ansible_hostname }}:{{ jenkins_home_dir }} \
  -v jenkins-shared:{{ shared_storage_path | default('/shared/jenkins') }} \
  -v /var/run/docker.sock:/var/run/docker.sock \
  -e JAVA_OPTS="${JAVA_OPTS}" \
  -e JENKINS_OPTS="--httpPort=8080" \
  -e CASC_JENKINS_CONFIG="${CASC_JENKINS_CONFIG}" \
  -e HARBOR_REGISTRY_URL="${HARBOR_REGISTRY_URL}" \
  -e HARBOR_PROJECT_NAME="${HARBOR_PROJECT_NAME}" \
  -e JENKINS_VERSION="${JENKINS_VERSION}" \
  -e JENKINS_AGENT_VERSION="${JENKINS_AGENT_VERSION}" \
  -e TZ="{{ common_timezone | default('UTC') }}" \
  --memory {{ jenkins_master_memory }} \
  --cpus {{ jenkins_master_cpu_limit }} \
  --log-driver {{ jenkins_log_driver }} \
  --log-opt max-size={{ jenkins_log_max_size }} \
  --log-opt max-file={{ jenkins_log_max_files }} \
  --restart {{ jenkins_restart_policy }} \
  --label service=jenkins-master \
  --label instance={{ ansible_hostname }} \
  --label cluster={{ jenkins_cluster_name }} \
  --label jcasc=enabled \
  --health-cmd="curl -f http://localhost:8080/login || exit 1" \
  --health-interval=30s \
  --health-timeout=10s \
  --health-retries=3 \
  --health-start-period=60s \
  --detach \
  {{ harbor_registry_url | default('jenkins') }}/{{ harbor_project | default('library') }}/jenkins-master:{{ jenkins_master_image_tag }}

ExecStop={% if jenkins_container_runtime == 'docker' %}/usr/bin/docker{% else %}/usr/bin/podman{% endif %} stop jenkins-master-{{ ansible_hostname }}
ExecStopPost={% if jenkins_container_runtime == 'docker' %}/usr/bin/docker{% else %}/usr/bin/podman{% endif %} rm jenkins-master-{{ ansible_hostname }}
Restart={{ jenkins_systemd_restart }}
RestartSec={{ jenkins_systemd_restart_sec }}
TimeoutStartSec=300
TimeoutStopSec=120

[Install]
WantedBy=multi-user.target