---
# Jenkins Volume Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

jenkins_home: {{ jenkins_home_dir }}
shared_storage: {{ shared_storage_path | default('/shared/jenkins') }}
backup_path: {{ backup_local_path | default('/backup/jenkins') }}

volumes:
{% for volume in jenkins_volumes %}
  - name: {{ volume.name }}
    type: {{ volume.type }}
{% if volume.type == 'bind' %}
    source: {{ volume.source }}
{% endif %}
{% if volume.driver is defined %}
    driver: {{ volume.driver }}
{% endif %}
{% endfor %}

directories:
  workspace: {{ jenkins_home_dir }}/workspace
  builds: {{ jenkins_home_dir }}/builds
  jobs: {{ jenkins_home_dir }}/jobs
  plugins: {{ jenkins_home_dir }}/plugins
  logs: {{ jenkins_home_dir }}/logs
  secrets: {{ jenkins_home_dir }}/secrets
  scripts: {{ jenkins_home_dir }}/scripts

permissions:
  user: {{ jenkins_user }}
  group: {{ jenkins_group }}
  mode: '0755'

storage_backend: {{ jenkins_container_runtime }}