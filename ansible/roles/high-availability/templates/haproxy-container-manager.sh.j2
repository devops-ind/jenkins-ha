#!/bin/bash
# HAProxy Container Management Script
# Generated by Ansible high-availability role

set -euo pipefail

HAPROXY_CONTAINER="jenkins-haproxy"
CONTAINER_RUNTIME="{{ haproxy_container_runtime | default('docker') }}"
LOG_FILE="/var/log/haproxy-container.log"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

# Logging function
log() {
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] $1" | tee -a "$LOG_FILE"
}

# Check if container runtime is running
check_runtime() {
    if ! systemctl is-active "$CONTAINER_RUNTIME" >/dev/null 2>&1; then
        echo -e "${RED}‚ùå $CONTAINER_RUNTIME service is not running${NC}"
        log "ERROR: $CONTAINER_RUNTIME service is not running"
        return 1
    fi
    return 0
}

# Start HAProxy container
start_haproxy() {
    log "Starting HAProxy container..."
    
    if ! check_runtime; then
        return 1
    fi
    
    if $CONTAINER_RUNTIME start "$HAPROXY_CONTAINER" 2>/dev/null; then
        echo -e "${GREEN}‚úÖ HAProxy container started successfully${NC}"
        log "SUCCESS: HAProxy container started"
        return 0
    else
        echo -e "${RED}‚ùå Failed to start HAProxy container${NC}"
        log "ERROR: Failed to start HAProxy container"
        return 1
    fi
}

# Stop HAProxy container
stop_haproxy() {
    log "Stopping HAProxy container..."
    
    if $CONTAINER_RUNTIME stop "$HAPROXY_CONTAINER" 2>/dev/null; then
        echo -e "${GREEN}‚úÖ HAProxy container stopped successfully${NC}"
        log "SUCCESS: HAProxy container stopped"
        return 0
    else
        echo -e "${RED}‚ùå Failed to stop HAProxy container${NC}"
        log "ERROR: Failed to stop HAProxy container"
        return 1
    fi
}

# Restart HAProxy container
restart_haproxy() {
    log "Restarting HAProxy container..."
    
    if $CONTAINER_RUNTIME restart "$HAPROXY_CONTAINER" 2>/dev/null; then
        echo -e "${GREEN}‚úÖ HAProxy container restarted successfully${NC}"
        log "SUCCESS: HAProxy container restarted"
        return 0
    else
        echo -e "${RED}‚ùå Failed to restart HAProxy container${NC}"
        log "ERROR: Failed to restart HAProxy container"
        return 1
    fi
}

# Check HAProxy container status
status_haproxy() {
    echo "üîç HAProxy Container Status:"
    echo "=========================="
    
    if $CONTAINER_RUNTIME ps --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}" | grep -q "^$HAPROXY_CONTAINER"; then
        echo -e "${GREEN}‚úÖ Container: RUNNING${NC}"
        
        # Show container details
        $CONTAINER_RUNTIME ps --format "table {{.Names}}\t{{.Status}}\t{{.Ports}}" | grep "$HAPROXY_CONTAINER"
        
        # Show health status (Docker only)
        if [ "$CONTAINER_RUNTIME" = "docker" ]; then
            local health_status
            health_status=$(docker inspect --format='{{.State.Health.Status}}' "$HAPROXY_CONTAINER" 2>/dev/null || echo "unknown")
            echo "Health Status: $health_status"
        fi
        
        # Show resource usage
        echo ""
        echo "üìä Resource Usage:"
        $CONTAINER_RUNTIME stats --no-stream --format "table {{.Container}}\t{{.CPUPerc}}\t{{.MemUsage}}\t{{.NetIO}}" "$HAPROXY_CONTAINER"
        
    else
        echo -e "${RED}‚ùå Container: NOT RUNNING${NC}"
        
        # Check if container exists but is stopped
        if $CONTAINER_RUNTIME ps -a --format "table {{.Names}}" | grep -q "^$HAPROXY_CONTAINER$"; then
            echo -e "${YELLOW}‚ö†Ô∏è Container exists but is stopped${NC}"
        else
            echo -e "${YELLOW}‚ö†Ô∏è Container does not exist${NC}"
        fi
    fi
    
    # Show HAProxy stats URL
    echo ""
    echo "üîó HAProxy Stats: http://{{ ansible_default_ipv4.address }}:{{ haproxy_stats_port | default(8404) }}/stats"
}

# Show HAProxy logs
logs_haproxy() {
    local lines="${1:-50}"
    echo "üìã HAProxy Container Logs (last $lines lines):"
    echo "============================================="
    
    if $CONTAINER_RUNTIME ps --format "table {{.Names}}" | grep -q "^$HAPROXY_CONTAINER$"; then
        $CONTAINER_RUNTIME logs --tail "$lines" "$HAPROXY_CONTAINER"
    else
        echo -e "${RED}‚ùå Container is not running${NC}"
        return 1
    fi
}

# Validate HAProxy configuration
validate_config() {
    echo "üîß Validating HAProxy Configuration:"
    echo "===================================="
    
    if $CONTAINER_RUNTIME exec "$HAPROXY_CONTAINER" haproxy -f /usr/local/etc/haproxy/haproxy.cfg -c 2>/dev/null; then
        echo -e "${GREEN}‚úÖ Configuration is valid${NC}"
        return 0
    else
        echo -e "${RED}‚ùå Configuration validation failed${NC}"
        return 1
    fi
}

# Clean up old images and containers
cleanup_haproxy() {
    log "Cleaning up HAProxy containers and images..."
    
    # Remove stopped containers
    $CONTAINER_RUNTIME container prune -f
    
    # Remove unused images
    $CONTAINER_RUNTIME image prune -f
    
    echo -e "${GREEN}‚úÖ Cleanup completed${NC}"
    log "SUCCESS: Cleanup completed"
}

# Main function
main() {
    case "${1:-}" in
        "start")
            start_haproxy
            ;;
        "stop")
            stop_haproxy
            ;;
        "restart")
            restart_haproxy
            ;;
        "status")
            status_haproxy
            ;;
        "logs")
            logs_haproxy "${2:-50}"
            ;;
        "validate")
            validate_config
            ;;
        "cleanup")
            cleanup_haproxy
            ;;
        *)
            echo "HAProxy Container Manager"
            echo "========================"
            echo "Usage: $0 {start|stop|restart|status|logs|validate|cleanup}"
            echo ""
            echo "Commands:"
            echo "  start     - Start HAProxy container"
            echo "  stop      - Stop HAProxy container"
            echo "  restart   - Restart HAProxy container"
            echo "  status    - Show container status and stats"
            echo "  logs      - Show container logs (optional: number of lines)"
            echo "  validate  - Validate HAProxy configuration"
            echo "  cleanup   - Clean up old containers and images"
            echo ""
            echo "Examples:"
            echo "  $0 status"
            echo "  $0 logs 100"
            echo "  $0 restart"
            echo ""
            echo "Container Runtime: $CONTAINER_RUNTIME"
            exit 1
            ;;
    esac
}

# Execute main function
main "$@"