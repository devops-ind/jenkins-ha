apiVersion: 1

providers:
{% if dashboard_deployment.jinja2_enabled | default(true) %}
  # Jinja2 Template-Based Dashboards (Phase 3)
  - name: 'Jenkins Infrastructure - Jinja2'
    orgId: 1
    folder: ''
    type: file
    disableDeletion: false
    updateIntervalSeconds: 10
    allowUiUpdates: true
    options:
      path: /var/lib/grafana/dashboards
{% endif %}
{% if grafonnet_enabled | default(true) %}
  # Grafonnet Dashboard-as-Code (Phase 5.5)
  - name: 'Jenkins Infrastructure - Grafonnet'
    orgId: 1
    folder: 'Generated'  # Separate folder in Grafana UI
    type: file
    disableDeletion: false
    updateIntervalSeconds: 10
    allowUiUpdates: false  # Grafonnet is code-managed, don't allow UI edits
    options:
      path: /var/lib/grafana/dashboards-generated
{% endif %}
